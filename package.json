{
  "name": "@tpluscode/sparql-builder",
  "version": "0.3.8",
  "description": "Simple JS library to build SPARQL queries",
  "main": "index.js",
  "module": "index.mjs",
  "types": "index.d.ts",
  "sideEffects": false,
  "files": [
    "lib",
    "*.js",
    "*.mjs",
    "*.d.ts",
    "*.d.ts.map"
  ],
  "scripts": {
    "test": "jest --coverage",
    "prepack": "npm run build",
    "build": "run-p build:*",
    "build:cjs": "tsc -p tsconfig.json",
    "build:esm": "BABEL_ENV=modules babel src --out-dir . --extensions .ts --out-file-extension .mjs",
    "docs": "docsify serve docs"
  },
  "dependencies": {
    "@rdfjs/data-model": "^1.1.2",
    "@rdfjs/term-set": "^1.0.1",
    "@tpluscode/rdf-ns-builders": "^0.3.6",
    "@tpluscode/rdf-string": "^0.2.16",
    "debug": "^4.1.1"
  },
  "peerDependencies": {
    "sparql-http-client": "^2.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-typescript": "^7.10.1",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@rdfjs/dataset": "^1.0.1",
    "@rdfjs/namespace": "^1.1.0",
    "@tpluscode/eslint-config": "0.0.4",
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.0",
    "@types/rdf-ext": "^1.3.5",
    "@types/rdf-js": "^3.0.1",
    "@types/rdfjs__fetch-lite": "^2.0.0",
    "@types/rdfjs__namespace": "^1.1.1",
    "@types/rdfjs__term-set": "^1.0.1",
    "@types/sparql-http-client": "^2.2.0",
    "@types/sparqljs": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "@zazuko/rdf-vocabularies": "^2020.2.11",
    "babel-plugin-add-import-extension": "github:tpluscode/babel-plugin-add-import-extension#type-only-export",
    "cz-conventional-changelog": "^3.0.2",
    "docsify-cli": "^4.4.0",
    "eslint-plugin-jest": "^23.1.1",
    "husky": "^3.1.0",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^26.0.1",
    "lint-staged": "^9.5.0",
    "minimist": ">=1.2.2",
    "npm-run-all": "^4.1.5",
    "sparql-http-client": "^2.2.0",
    "sparqljs": "^3.0.1",
    "standard": "^14.3.1",
    "typedoc": "^0.17.3",
    "typescript": "^3.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tpluscode/ts-template.git"
  },
  "author": "Tomasz Pluskiewicz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tpluscode/ts-template/issues"
  },
  "homepage": "https://github.com/tpluscode/ts-template#readme",
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && tsc --noEmit"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testRegex": "tests/.+\\.spec\\.ts$",
    "setupFilesAfterEnv": [
      "./tests/jestSetup.ts"
    ]
  },
  "esm": {
    "await": true
  }
}
