{
  "name": "@tpluscode/sparql-builder",
  "version": "0.1.1",
  "description": "Simple JS library to build SPARQL queries",
  "main": "dist/node/index.js",
  "module": "dist/es/index.js",
  "types": "index.d.ts",
  "scripts": {
    "test": "jest --coverage",
    "prepack": "npm run build",
    "build": "npm run build:node; npm run build:web",
    "build:node": "tsc -p tsconfig.node.json",
    "build:web": "tsc -p tsconfig.es.json",
    "docs": "docsify serve docs"
  },
  "files": [
    "dist",
    "lib",
    "*.d.ts",
    "*.d.ts.map"
  ],
  "dependencies": {
    "@rdfjs/data-model": "^1.1.2",
    "@tpluscode/rdf-string": "^0.2.8",
    "debug": "^4.1.1"
  },
  "peerDependencies": {
    "sparql-http-client": "^1.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@rdfjs/namespace": "^1.1.0",
    "@tpluscode/eslint-config": "0.0.4",
    "@tpluscode/rdf-ns-builders": "^0.0.1",
    "@types/debug": "^4.1.5",
    "@types/jest": "^25.1.2",
    "@types/rdf-ext": "^1.3.5",
    "@types/rdf-js": "^2.0.11",
    "@types/rdfjs__fetch-lite": "^2.0.0",
    "@types/rdfjs__namespace": "^1.1.1",
    "@types/sparql-http-client": "^1.2.1",
    "@types/sparqljs": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "@zazuko/rdf-vocabularies": "^2020.2.11",
    "cz-conventional-changelog": "^3.0.2",
    "docsify-cli": "^4.4.0",
    "eslint-plugin-jest": "^23.1.1",
    "husky": "^3.1.0",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^9.5.0",
    "sparqljs": "^3.0.1",
    "standard": "^14.3.1",
    "typescript": "^3.7.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tpluscode/ts-template.git"
  },
  "author": "Tomasz Pluskiewicz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tpluscode/ts-template/issues"
  },
  "homepage": "https://github.com/tpluscode/ts-template#readme",
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && tsc --noEmit"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testRegex": "tests/.+\\.spec\\.ts$",
    "setupFilesAfterEnv": [
      "./tests/jestSetup.ts"
    ]
  }
}
