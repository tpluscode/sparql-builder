{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "outDir": ".",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true
  },
  "files": [
    "src/index.ts",
    "src/expressions.ts"
  ],
  "typedocOptions": {
    "name": "@tpluscode/sparql-builder",
    "entryPoints": [
      "src/index.ts",
      "src/expressions.ts"
    ],
    "out": "docs/api"
  }
}
