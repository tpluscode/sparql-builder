{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2018",
    "outDir": ".",
    "lib": [
      "es6",
      "esnext",
      "webworker"
    ],
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true
  },
  "files": [
    "src/index.ts"
  ],
  "typedocOptions": {
    "inputFiles": ["src/"],
    "exclude": "tests/**/*.ts"
  }
}
